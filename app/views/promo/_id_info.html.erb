<%= form_for @qtest, url: promo_path, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @qtest.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@qtest.errors.count, 'error') %> prohibited this form from being
        saved:</h2>
      <ul>
        <% @qtest.errors.full_messages.each do |msg| %>
          <li class='alert fade in alert-danger alert-dismissable'><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='control-group'>
    <%= f.label :first_name, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :last_name, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :email, :class => 'control-label' %>
    <div class='controls'>
      <%= f.email_field :email,  :class => 'text_field' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :password, :class => 'control-label' %>
    <div class='controls'>
      <%= f.password_field :password, :class => 'text_field' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.hidden_field :license_key  %>
  </div>
  <div class='form-actions'>
    <%= f.submit 'Create Promo', :class => 'btn btn-primary' %>
  </div>
<% end %>
