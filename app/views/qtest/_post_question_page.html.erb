<%= form_for @qtest, url: qtest_path, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @qtest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@qtest.errors.count, "error") %> prohibited this form from being
        saved:</h2>
      <ul>
        <% @qtest.errors.full_messages.each do |msg| %>
          <li class='alert fade in alert-danger alert-dismissable'><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :state,
                   options_for_select([['',''],
                                       ['Alabama','AL'],
                                       ['Alaska','AK'],
                                       ['Arizona','AZ'],
                                       ['Arkansas','AR'],
                                       ['California','CA'],
                                       ['Colorado','CO'],
                                       ['Connecticut','CT'],
                                       ['Delaware','DE'],
                                       ['Florida','FL'],
                                       ['Georgia','GA'],
                                       ['Hawaii','HI'],
                                       ['Idaho','ID'],
                                       ['Illinois','IL'],
                                       ['Indiana','IN'],
                                       ['Iowa','IA'],
                                       ['Kansas','KS'],
                                       ['Kentucky','KY'],
                                       ['Louisiana','LA'],
                                       ['Maine','ME'],
                                       ['Maryland','MD'],
                                       ['Massachusetts','MA'],
                                       ['Michigan','MI'],
                                       ['Minnesota','MN'],
                                       ['Mississippi','MS'],
                                       ['Missouri','MO'],
                                       ['Montana','MT'],
                                       ['Nebraska','NE'],
                                       ['Nevada','NV'],
                                       ['New Hampshire','NH'],
                                       ['New Jersey','NJ'],
                                       ['New Mexico','NM'],
                                       ['New York','NY'],
                                       ['North Carolina','NC'],
                                       ['North Dakota','ND'],
                                       ['Ohio','OH'],
                                       ['Oklahoma','OK'],
                                       ['Oregon','OR'],
                                       ['Pennsylvania','PA'],
                                       ['Rhode Island','RI'],
                                       ['South Carolina','SC'],
                                       ['South Dakota','SD'],
                                       ['Tennessee','TN'],
                                       ['Texas','TX'],
                                       ['Utah','UT'],
                                       ['Vermont','VT'],
                                       ['Virginia','VA'],
                                       ['Washington','WA'],
                                       ['West Virginia','WV'],
                                       ['Wisconsin','WI'],
                                       ['Wyoming','WY'],
                                       ['American Samoa','AS'],
                                       ['District of Columbia','DC'],
                                       ['Federated States of Micronesia','FM'],
                                       ['Guam','GU'],
                                       ['Marshall Islands','MH'],
                                       ['Northern Mariana Islands','MP'],
                                       ['Palau','PW'],
                                       ['Puerto Rico','PR'],
                                       ['Virgin Islands','VI'],
                                       ['Armed Forces Africa','AE'],
                                       ['Armed Forces Americas','AA'],
                                       ['Armed Forces Canada','AE'],
                                       ['Armed Forces Europe','AE'],
                                       ['Armed Forces Middle East','AE'],
                                       ['Armed Forces Pacific','AP'],
                                       ['Outside US','OU']]),
                   :class => 'genForm_dropBox' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :department, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :department,
                   options_for_select(['',
                                       'Business Development',
                                       'Corporate Staff',
                                       'Customer',
                                       'Customer Service',
                                       'Engineering',
                                       'Financial (AP, AR, etc.)',
                                       'Human Resources (hiring, benefits, etc.)',
                                       'Insurance',
                                       'Inventory',
                                       'IT',
                                       'Licensing',
                                       'Management',
                                       'Market Development',
                                       'Marketing',
                                       'Operations',
                                       'Organizational',
                                       'Purchasing',
                                       'Research & Development',
                                       'Quality Assurance',
                                       'Services',
                                       'Sales',
                                       'Self Employed',
                                       'Training and Development',
                                       'Other']),
                   :class => 'genForm_dropBox' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :level, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :level,
                   options_for_select(['',
                                       'Individual Contributor',
                                       'Management',
                                       'Lead (of entire department)']),
                   :class => 'genForm_dropBox' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :years_in_workforce, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :years_in_workforce,
                   options_for_select([['0-5', 0],
                                       ['6-10', 6],
                                       ['11-15', 11],
                                       ['16-20', 16],
                                       ['21-25', 21],
                                       ['26+', 26]]),
                   :class => 'genForm_dropBox' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :degree, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :degree,
                   options_for_select(['',
                                      'None',
                                      'High School',
                                      'Some College',
                                      'Associates',
                                      'Bachelors',
                                      'Masters',
                                      'Doctorate',
                                      'Post Doctorate']),
                   :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :gender, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :gender,
                   options_for_select(['',
                                       'Female',
                                       'Male']),
                   :class => 'genForm_dropBox' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :age_range, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :age_range,
                   options_for_select(['',
                                       '0-5',
                                       '6-15',
                                       '15-25',
                                       '26-35',
                                       '36-45',
                                       '46-55',
                                       '56-65',
                                       '66-75',
                                       '76-85',
                                       '86-95',
                                       '96-105',
                                       '106-115',
                                       '116-125']),
                   :class => 'genForm_dropBox' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit '<-- Go Back ', :class => 'btn btn-primary' %>
    <%= f.submit ' Calculate My IQE! ', :class => 'btn btn-primary' %>
  </div>

  <% done = @qtest.question_finished * 100 / @qtest.question_count %>
  <%=  progress_bar(done, color: 'blue') %>
<% end %>
